<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />

                    <stroke
                        android:width="2dp"
                        android:color="@color/colorMenu" />
                    <corners
                        android:radius="10dp" />

                    <padding
                        android:bottom="7dip"
                        android:left="7dip"
                        android:right="7dip"
                        android:top="7dip" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right"
                    android:src="@drawable/expand" />
            </item>
        </layer-list>
    </item>
</selector>